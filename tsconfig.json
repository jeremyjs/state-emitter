{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": false,
    "module": "commonjs",
    "noEmitOnError": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "es2015",
      "es2015.promise"
    ],
    "skipLibCheck": true,
    "outDir": "dist/"
  },
  "include": [
    "src/**/*"
  ]
}